// This is your Prisma schema file,
// learn more about it: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String? // Super Admin, Owner, Manager, Employee
  isApproved    Boolean   @default(false) // Approval status for Owner/Manager
  emailVerified DateTime?
  image         String?
  departmentId  String? // Department assignment
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  profile                         Profile?
  savedWork                       SavedWork[]
  usageHistory                    UsageHistory[]
  sessions                        Session[]
  accounts                        Account[]
  dailyNotepadSubmissions         DailyNotepadSubmission[]
  teamMemberships                 TeamMember[]
  notifications                   Notification[]
  submissionComments              SubmissionComment[]
  department                      Department?                  @relation(fields: [departmentId], references: [id])
  announcements                   Announcement[] // Announcements created by this user
  activities                      Activity[] // Activities performed by this user
  createdEvents                   CalendarEvent[]              @relation("EventCreator") // Calendar events created by this user
  reviewedDailyNotepadSubmissions DailyNotepadSubmission[]     @relation("DailyNotepadReview")
  managedEmployees                ManagerAssignment[]          @relation("ManagerAssignments")
  managers                        ManagerAssignment[]          @relation("EmployeeAssignments")
  estimateComparisonFeedback      EstimateComparisonFeedback[]

  @@index([departmentId])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?
  avatar      String?
  preferences Json? // Store user preferences as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model SavedWork {
  id          String   @id @default(cuid())
  userId      String
  toolId      String
  title       String
  description String?
  data        Json // Store tool-specific data as JSON
  files       String[] // Array of file paths/URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([toolId])
  @@map("saved_work")
}

model UsageHistory {
  id        String   @id @default(cuid())
  userId    String
  toolId    String
  action    String // e.g., "tool_used", "ai_request", "file_uploaded"
  metadata  Json? // Additional context about the action
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([toolId])
  @@index([createdAt])
  @@map("usage_history")
}

model File {
  id           String   @id @default(cuid())
  userId       String
  toolId       String?
  filename     String
  originalName String
  mimeType     String
  size         Int
  path         String // Path to file in storage
  url          String? // Public URL if applicable
  savedWorkId  String? // If associated with saved work
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([toolId])
  @@map("files")
}

model DailyNotepadSubmission {
  id             String    @id @default(cuid())
  userId         String
  date           DateTime  @db.Date // Date of submission (day)
  imageUrl       String // Path/URL to uploaded image
  thumbnailUrl   String? // Path/URL to thumbnail image
  fileSize       Int? // Original file size in bytes
  optimizedSize  Int? // Optimized file size in bytes
  imageOptimized Boolean   @default(false) // Optimization status
  ocrText        String?   @db.Text // Extracted text from image (for search)
  submittedAt    DateTime  @default(now()) // Timestamp of submission
  isOnTime       Boolean // Submitted before 9 AM deadline
  reviewStatus   String? // "ok" | "needs_follow_up"
  reviewNote     String?   @db.Text
  reviewedAt     DateTime?
  reviewedById   String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user       User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewedBy User?               @relation("DailyNotepadReview", fields: [reviewedById], references: [id], onDelete: SetNull)
  comments   SubmissionComment[]

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@index([submittedAt])
  @@map("daily_notepad_submissions")
}

model ManagerAssignment {
  id         String   @id @default(cuid())
  managerId  String
  employeeId String
  createdAt  DateTime @default(now())

  manager  User @relation("ManagerAssignments", fields: [managerId], references: [id], onDelete: Cascade)
  employee User @relation("EmployeeAssignments", fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([managerId, employeeId])
  @@index([managerId])
  @@index([employeeId])
  @@map("manager_assignments")
}

model SubmissionComment {
  id           String   @id @default(cuid())
  submissionId String
  userId       String
  comment      String   @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  submission DailyNotepadSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  user       User                   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([userId])
  @@map("submission_comments")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members TeamMember[]

  @@unique([name])
  @@map("teams")
}

model TeamMember {
  id       String   @id @default(cuid())
  teamId   String
  userId   String
  joinedAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
  @@map("team_members")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String // "submission", "reminder", "confirmation", "summary", "announcement", etc.
  title     String
  message   String   @db.Text
  read      Boolean  @default(false)
  metadata  Json? // Additional data (submissionId, employeeId, announcementId, etc.)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
  @@index([type])
  @@map("notifications")
}

model Department {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users          User[]
  calendarEvents CalendarEvent[]

  @@map("departments")
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  message   String   @db.Text
  authorId  String
  priority  String   @default("normal") // "low", "normal", "high", "urgent"
  category  String? // Category/department tag
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([createdAt])
  @@index([pinned, createdAt])
  @@index([priority])
  @@map("announcements")
}

model Activity {
  id        String   @id @default(cuid())
  userId    String
  type      String // "tool_used", "notepad_submitted", "estimate_compared", etc.
  toolId    String? // Which tool was used
  action    String // Specific action taken
  metadata  Json? // Additional context (tool name, submission date, etc.)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([toolId])
  @@index([createdAt])
  @@map("activities")
}

model CalendarEvent {
  id           String    @id @default(cuid())
  title        String
  description  String?   @db.Text
  startDate    DateTime
  endDate      DateTime?
  location     String?
  createdById  String
  departmentId String? // If department-specific
  allDay       Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  createdBy  User        @relation("EventCreator", fields: [createdById], references: [id], onDelete: Cascade)
  department Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)

  @@index([createdById])
  @@index([startDate])
  @@index([departmentId])
  @@map("calendar_events")
}

model EstimateComparisonFeedback {
  id              String   @id @default(cuid())
  userId          String
  comparisonId    String? // Optional: link to a saved comparison
  itemType        String // "missing_item" | "discrepancy" | "overall"
  itemIndex       Int? // Index of the item in the results array
  itemDescription String? // Description of the item being feedback on
  isCorrect       Boolean // true = correct, false = incorrect
  feedbackType    String? // "false_positive" | "false_negative" | "missing_item" | "other"
  comment         String?  @db.Text
  adjusterData    Json? // How item appears in adjuster estimate
  contractorData  Json? // How item appears in contractor estimate
  metadata        Json? // Additional context
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([comparisonId])
  @@index([itemType])
  @@index([isCorrect])
  @@index([createdAt])
  @@map("estimate_comparison_feedback")
}
